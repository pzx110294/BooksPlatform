@model Serwis_Książkowy.Models.Author

@{
    ViewData["Title"] = "Edit Author";
}

<h2>Edit Author</h2>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="AuthorId"/>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary"/>
    </div>
</form>
<a asp-controller="Authors" asp-action="Delete" asp-route-id="@Model.AuthorId"><button class="btn btn-danger">Delete</button></a>

<div>
    <a asp-action="Index" asp-route-authorId="@Model.AuthorId">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}