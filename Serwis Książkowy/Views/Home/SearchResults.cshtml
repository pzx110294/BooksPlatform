@model AuthorBookSearchResultsView

<partial name="Header"/>

@if (Model.BookViewModels != null && Model.BookViewModels.Any())
{
    <div class="container mt-4">
        <h3>Books</h3>
        <div class="row">
            @foreach (var book in Model.BookViewModels)
            {
                <div class="col-md-12 mb-4">
                    <partial name="Book" model="book"/>
                </div>
            }
        </div>
    </div>
}

@if (Model.AuthorViewModels != null && Model.AuthorViewModels.Any())
{
    <div class="container mt-4">
        <h3>Authors</h3>
        <div class="row">
            @foreach (var author in Model.AuthorViewModels)
            {
                <div class="col-md-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <partial name="Author" model="author.Author"/>
                                </div>
                                <div>
                                    <partial name="Follow" model="author"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@if (Model.BookViewModels == null && Model.AuthorViewModels == null)
{
    <div class="container mt-4">
        <p class="text-muted">No results found.</p>
    </div>
}
<partial name="Pagination"/>