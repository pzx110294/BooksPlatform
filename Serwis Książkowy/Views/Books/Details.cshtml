@model Serwis_Książkowy.Models.Book

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    @{
    string coverUrl = "https://covers.openlibrary.org/b/isbn/" + Model.Isbn + "-M.jpg";
    }
    <img width="50%" height="10%" src=@coverUrl />
</div>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Isbn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Isbn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Authors" asp-action="Index" asp-route-authorId="@Model.AuthorId">
                @Html.DisplayFor(model => model.Author.Name)
            </a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublicationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>
</div>
@if (User.Identity.IsAuthenticated && !ViewBag.Reviewed)
{
    <partial name="AddReview" model="Model.BookId"/>
}
<partial name="Reviews" model="@Model.Reviews"/>
<div>
    @if (User.IsInRole("Admin"))
    {
        <div><a asp-action="Edit" asp-route-id="@Model?.BookId">Edit</a> | </div>
    }
    <a asp-action="Index">Back to List</a>
</div>
